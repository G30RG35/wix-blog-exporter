{
  "manifest_version": 3,
  "name": "Wix Blog Exporter",
  "version": "1.1",
  "description": "Exporta entradas de blog de Wix a JSON con imágenes - Versión Mejorada",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "*://*.wix.com/*",
    "*://*.wixsite.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.wix.com/*",
        "*://*.wixsite.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}